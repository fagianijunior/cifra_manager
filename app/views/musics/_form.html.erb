<%= simple_form_for(@music, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, label: "Titulo", class: "form-control input-lg" %>
  <%= f.input :chord, as: "text", class: "form-control input-lg" %>
  <%= f.input :lyric, as: "text", class: "form-control input-lg", rows: 10 %>
  <%= f.input :obs, class: "form-control input-lg" %>
  <%= f.check_box :in_use, class: "form-control input-lg" %>
  <%= f.submit "Salvar", class: "btn btn-default btn-lg" %>
<% end %>






